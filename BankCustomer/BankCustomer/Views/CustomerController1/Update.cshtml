
@{
    ViewData["Title"] = "Update";
}

@model Customer;

<h1> Update Customer </h1>

<form method="post">
    <input hidden asp-for="Id" />
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Name" />

                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Address" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Age"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Age" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Gender"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Gender" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="OpeningBalance"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="OpeningBalance" />
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8">
                    <input type="submit" class="btn btn-info w-50" value="Update" />
                </div>
                @if(ViewBag.Message != null)
                {
                    <script type="text/javascript">
                        window.onload = function () {
                            alert("@ViewBag.Message");
                        };
                    </script>
                }
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-danger w-50"> Back </a>
                </div>
            </div>
        </div>
    </div>
</form>

