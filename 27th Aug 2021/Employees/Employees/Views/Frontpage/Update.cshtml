
@{
    ViewData["Title"] = "Update";
}

@model EmployeeDetail

<h1> Update Employee </h1>

<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden asp-for="Id" />
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Designation"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Designation" />
                    <span asp-validation-for="Designation" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="HireDate"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="HireDate" />
                    <span asp-validation-for="HireDate" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="SkillId"></label>
                </div>
                <div class="col-6">
                    <select asp-for="SkillId" asp-items="@ViewBag.myDropdown" class="form-control">
                        <option selected="">--Select--</option>
                    </select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8">
                    <input type="submit" class="btn btn-info w-50" value="Update" />
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-danger w-50"> Back </a>
                </div>
            </div>
        </div>
    </div>
</form>


