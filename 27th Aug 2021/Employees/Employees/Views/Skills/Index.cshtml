
@{
    ViewData["Title"] = "Index";
}


@model IEnumerable<Skills>

<div class="row">
    <div class="col-10">
        <h4> Department Details </h4>
    </div>
    <div class="col-2">
        <a asp-controller="Skills" asp-action="Create" class="btn btn-primary"> Add Skill </a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr>
                    <th> Skill ID </th>
                    <th> Skill Name </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var skill in Model)
                {
                <tr>
                    <td> @skill.SkillId </td>
                    <td> @skill.SkillName </td>
                    <td>
                        <a asp-action="Update" asp-route-id="@skill.SkillId" class="btn btn-primary"> Update </a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@skill.SkillId" class="btn btn-primary" onclick="return confirm('Are you sure to delete the customer')"> Delete </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>


